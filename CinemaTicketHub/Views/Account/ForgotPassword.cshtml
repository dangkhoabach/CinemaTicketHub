@model CinemaTicketHub.Models.ForgotPasswordViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Cinema Ticket Hub</title>
    <link rel="icon" href="~/ticketicon.ico" />
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/css/authenticatestyle.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/818e023cf2.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="login-box">
        <a href="/Account/Login" class="gotosignup" style="float: left"><i class="fa-solid fa-arrow-left"></i></a>
        <h2 style="margin-top: 20px">@CinemaTicketHub.MultiLanguage.Language.ForgotPassword</h2>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="user-box">
                <input type="text" name="" required="" id="txtemail1">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "txtemail2" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <a href="#" onclick="document.querySelector('.btn-default').click(); return false;">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                @CinemaTicketHub.MultiLanguage.Language.Confirm
            </a>
            <input type="submit" class="btn btn-default" value="Email Link" />
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $('#txtemail1').on('input', function () {
            var value = $(this).val();

            // Gán giá trị của textbox 1 cho Html.TextBoxFor
            $('#txtemail2').val(value);
        });
    </script>
</body>
</html>