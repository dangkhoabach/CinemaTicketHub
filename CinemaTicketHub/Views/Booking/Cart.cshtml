@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>[Mua bắp nước] Cinema Ticket Hub</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/css/mainstyle.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/818e023cf2.js" crossorigin="anonymous"></script>
    <style>
        .header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            text-align: center;
            box-sizing: border-box;
        }
    </style>
</head>

<body class="d-flex flex-column">
    <div class="header">
        <h1 style="color: red; margin-top: 20px">@ViewBag.moviesdetail.Phim.TenPhim</h1>
        <p><b style="color: gold; font-size: 18px">[Suất chiếu: @ViewBag.moviesdetail.MaSuatChieu]</b> <b style="font-size: 17px">Ngày chiếu: @ViewBag.moviesdetail.NgayChieu.ToShortDateString() - Giờ chiếu: @ViewBag.moviesdetail.GioBatDau.ToString("hh\\:mm") - @ViewBag.moviesdetail.PhongChieu.TenPhong</b></p>
    </div>
    <main class="flex-shrink-0" style="margin-top: 40px">
        <!-- Page Content-->
        <section class="container" style="padding-top: 2rem !important">
            <div class="container px-5" style=" margin-top: 3rem !important; margin-bottom: 2rem !important">
                <div class="row gx-5">
                    <div class="col-lg-8 card" style="max-height: 720px; overflow: auto; padding: 10px">
                        @foreach (var foodndrink in ViewBag.Popcorn)
                        {
                            <div class="card mb-3" style="max-width: 800px;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <div style="position: relative; display: inline-block;">
                                            <img src="@foodndrink.HinhAnhMon" class="img-fluid rounded-start" alt="..." style="width: 246px; height: 176px;">
                                            <div style="position: absolute; width: 246px; bottom: 0; right: 0; padding: 5px; background-color: rgba(0, 0, 0, 0.6); text-align: center">
                                                <span style="font-weight: bold; font-size: 18px; color: white">@string.Format("{0:#,0}", @foodndrink.GiaMon)</span>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h4 class="card-title">@foodndrink.TenMon</h4>
                                            <p class="card-text" style="text-align: justify">@foodndrink.MoTa</p>
                                        </div>
                                        <a href="@Url.Action("AddToCart", "Booking", new { ID = foodndrink.MaMon, @strURL = Request.Url.ToString()})"><i class="fa-solid fa-circle-plus" style="color: #0d6efd; font-size: 25px; float: right; margin-right: 15px"></i></a>
                                        <a href="@Url.Action("UpdateCart", "Booking", new { ID = foodndrink.MaMon, @strURL = Request.Url.ToString()})"><i class="fa-solid fa-circle-minus" style="color: red; font-size: 25px; float: right; margin-right: 15px"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-lg-4">
                        <div class="card" style="padding: 10px; margin-bottom: 15px; max-height: 465px; overflow: auto">
                            <h5 style="color: red; margin-bottom: 15px; text-align: center">THÔNG TIN VÉ</h5>
                            <h6><b>GHẾ NGỒI</b></h6>
                            <ol class="list-group" style="margin-bottom: 25px">
                                @foreach (var item in Model)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Ghế @item.Day@item.Cot</div>
                                        </div>
                                    </li>
                                }
                            </ol>
                            <h6><b>BẮP NƯỚC</b></h6>
                            <ol class="list-group">
                                @foreach (var item2 in ViewBag.CartMonAn)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">@item2.TenMon <span class="badge bg-primary rounded-pill">@item2.SoLuong</span></div>
                                        </div>
                                        <span><b>@string.Format("{0:#,0}", @item2.ThanhTien)</b></span>
                                    </li>
                                }
                            </ol>
                        </div>

                        <div class="card" style="padding: 10px">
                            <h5 style="color: red; margin-bottom: 15px; text-align: center">THANH TOÁN</h5>
                            <h6><b>PHƯƠNG THỨC THANH TOÁN</b></h6>
                            @*Thanh toán VNPay*@
                            <div class="d-flex justify-content-start align-items-start">
                                <input type="radio" name="paymentMethod" value="VNPay" /><img src="~/Content/images/vnpay-logo.png" style="height: 12px; margin-left: 5px; margin-bottom: 15px" />
                            </div>
                            @*Thanh toán Momo*@
                            <div class="d-flex justify-content-start align-items-start">
                                <input type="radio" name="paymentMethod" value="Momo" /><img src="~/Content/images/momo-logo.png" style="height: 12px; margin-left: 5px" />
                            </div>

                            <hr />
                            <h5 style="text-align: center"><b>TỔNG TIỀN: @string.Format("{0:#,0}", @ViewBag.TongTien)</b></h5>

                            <div class="d-flex justify-content-center align-items-center">
                                <button onclick="handleButtonClick()" class="btn btn-outline-primary" style="width: 100%; margin: 5px 0"><b>Thanh toán</b></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div style="text-align: center">
            <a href="@Url.Action("Reselect", "Booking", new { maphim = @ViewBag.moviesdetail.MaPhim})" style="text-decoration: none; color: red; font-size: 20px"><b><i class="fa-solid fa-arrow-left" style="color: red"></i> QUAY LẠI</b></a>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>

    <script>
        function handleButtonClick() {
            var radios = document.getElementsByName('paymentMethod');
            var selectedValue;

            // Lặp qua các radio và lấy giá trị của radio được chọn
            for (var i = 0; i < radios.length; i++) {
                if (radios[i].checked) {
                    selectedValue = radios[i].value;
                    break;
                }
            }

            // Kiểm tra giá trị của radio và thực hiện hành động tương ứng
            if (selectedValue === 'VNPay') {
                window.location.href = '/Booking/VNPay';
            } else if (selectedValue === 'Momo') {
                window.location.href = '/Booking/Momo';
            } else {
                // Hiển thị cảnh báo nếu không có radio nào được chọn
                alert("Vui lòng chọn Phương thức thanh toán");
            }
        }
    </script>
</body>
</html>
