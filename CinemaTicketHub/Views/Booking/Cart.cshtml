@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/css/mainstyle.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/818e023cf2.js" crossorigin="anonymous"></script>
    <style>
        .header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            text-align: center;
            box-sizing: border-box;
        }
    </style>
</head>

<body class="d-flex flex-column">
@*    <div class="header">
        <h1 style="color: red">@ViewBag.moviesdetail.Phim.TenPhim</h1>
        <p><b style="color: gold; font-size: 18px">[Suất chiếu: @ViewBag.moviesdetail.MaSuatChieu]</b> <b style="font-size: 17px">Ngày chiếu: @ViewBag.moviesdetail.NgayChieu - Giờ chiếu: @ViewBag.moviesdetail.GioBatDau - @ViewBag.moviesdetail.PhongChieu.TenPhong</b></p>
    </div>*@
    <main class="flex-shrink-0">
        <!-- Page Content-->
        <section class="py-5">
            <div class="container px-5 my-5">
                <div class="row gx-5">

                    <div class="col-lg-8">
                        <div class="card mb-3" style="max-width: 800px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="https://i0.wp.com/spainonafork.com/wp-content/uploads/2019/04/popcornHOR-11.png?fit=750%2C750&ssl=1" class="img-fluid rounded-start" alt="..." style="width: 246px; height: 176px">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">BẮP NƯỚC</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                        <a href="#"><i class="fa-solid fa-circle-plus" style="color: #0d6efd; font-size: 25px"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-4">
                        <div class="card" style="padding: 10px; text-align: center">
                            <h4 style="color: red">Đơn hàng</h4>
                            <ol class="list-group">
                                @foreach (var item in Model)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Ghế @item.Day@item.Cot</div>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">14</span>
                                    </li>
                                }

                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">Bắp nước</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">14</span>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>
</body>
</html>
