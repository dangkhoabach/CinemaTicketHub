@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>[Bắp Nước] Cinema Ticket Hub</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.css">
    <link rel="stylesheet" href="~/Content/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
</head>

<body>
    <!-- ***** Banner Start ***** -->
    <div class="main-banner" style="min-height: unset; padding: unset">
        <div class="row">
            <div class="header-text">
                <h4 style="text-align: center; margin: 30px 0 0; color: #ffff00">@ViewBag.moviesdetail.Phim.TenPhim</h4>
                <h6 style="text-align: center; margin: 0"><b style="color: #ec6090; font-size: 18px">[Suất chiếu: @ViewBag.moviesdetail.MaSuatChieu]</b> <b style="font-size: 17px">Ngày chiếu: @ViewBag.moviesdetail.NgayChieu.ToShortDateString() - Giờ chiếu: @ViewBag.moviesdetail.GioBatDau.ToString("hh\\:mm") - @ViewBag.moviesdetail.PhongChieu.TenPhong</b></h6>
            </div>
        </div>
    </div>
    <!-- ***** Banner End ***** -->

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-content" style="margin-top: 30px">
                    <!-- ***** Popcorn and Drink Start ***** -->
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="featured-games header-text" style="max-height: 515px;">
                                <div class="heading-section">
                                    <h4><em>Chọn</em> Bắp Nước</h4>
                                </div>
                                <div class="owl-features owl-carousel">
                                    @foreach (var foodndrink in ViewBag.Popcorn)
                                    {
                                        <div class="item">
                                            <div class="thumb">
                                                <img src="@foodndrink.HinhAnhMon" alt="">
                                                <div class="hover-effect">
                                                    <h6>@string.Format("{0:#,0}", @foodndrink.GiaMon)</h6>
                                                </div>
                                            </div>
                                            <h4>@foodndrink.TenMon<br><span>@foodndrink.MoTa</span></h4>

                                            <a href="@Url.Action("AddToCart", "Booking", new { ID = foodndrink.MaMon, @strURL = Request.Url.ToString()})"><i class="fa-solid fa-circle-plus" style="color: #0d6efd; font-size: 25px; float: right; margin-right: 15px"></i></a>
                                            <a href="@Url.Action("UpdateCart", "Booking", new { ID = foodndrink.MaMon, @strURL = Request.Url.ToString()})"><i class="fa-solid fa-circle-minus" style="color: red; font-size: 25px; float: right; margin-right: 15px"></i></a>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="top-downloaded" style="style=" max-height: 515px;"">
                                <div class="heading-section">
                                    <h4><em>Thông Tin</em> Vé</h4>
                                </div>
                                <div class="card" style="padding: 10px; margin-bottom: 15px; max-height: 465px; overflow: auto">
                                    <h6><b>GHẾ NGỒI</b></h6>
                                    <ol class="list-group" style="margin-bottom: 25px">
                                        @foreach (var item in Model)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">Ghế @item.Day@item.Cot</div>
                                                </div>
                                            </li>
                                        }
                                    </ol>
                                    <h6><b>BẮP NƯỚC</b></h6>
                                    <ol class="list-group">
                                        @foreach (var item2 in ViewBag.CartMonAn)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">@item2.TenMon <span class="badge bg-primary rounded-pill">@item2.SoLuong</span></div>
                                                </div>
                                                <span><b>@string.Format("{0:#,0}", @item2.ThanhTien)</b></span>
                                            </li>
                                        }
                                    </ol>
                                </div>
                                <div class="card" style="padding: 10px">
                                    <h5 style="color: red; margin-bottom: 15px; text-align: center">THANH TOÁN</h5>
                                    <h6><b>PHƯƠNG THỨC THANH TOÁN</b></h6>
                                    @*Thanh toán VNPay*@
                                    <div class="d-flex justify-content-start align-items-start">
                                        <input type="radio" name="paymentMethod" value="VNPay" /><img src="~/Content/images/vnpay-logo.png" style="height: 12px; margin-left: 5px; margin-bottom: 15px" />
                                    </div>
                                    @*Thanh toán Momo*@
                                    <div class="d-flex justify-content-start align-items-start">
                                        <input type="radio" name="paymentMethod" value="Momo" /><img src="~/Content/images/momo-logo.png" style="height: 12px; margin-left: 5px" />
                                    </div>
                                    <hr />
                                    <h5 style="text-align: center"><b>TỔNG TIỀN: @string.Format("{0:#,0}", @ViewBag.TongTien)</b></h5>

                                    <div class="d-flex justify-content-center align-items-center">
                                        <button onclick="handleButtonClick()" class="btn btn-outline-primary" style="width: 100%; margin: 5px 0"><b>Thanh toán</b></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ***** Popcorn and Drink End ***** -->

                    @*<div style="text-align: center">
                        <a href="@Url.Action("Reselect", "Booking", new { maphim = @ViewBag.moviesdetail.MaPhim})" style="text-decoration: none; color: red; font-size: 20px"><b><i class="fa-solid fa-arrow-left" style="color: red"></i> QUAY LẠI</b></a>
                    </div>*@

                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright © 2036 <a href="#">Cyborg Gaming</a> Company. All rights reserved.

                        <br>Design: <a href="https://templatemo.com" target="_blank" title="free CSS templates">TemplateMo</a> Distributed By <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/assets/js/isotope.min.js"></script>
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/tabs.js"></script>
    <script src="~/Content/assets/js/popup.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>

    <script>
        function handleButtonClick() {
            var radios = document.getElementsByName('paymentMethod');
            var selectedValue;

            // Lặp qua các radio và lấy giá trị của radio được chọn
            for (var i = 0; i < radios.length; i++) {
                if (radios[i].checked) {
                    selectedValue = radios[i].value;
                    break;
                }
            }

            // Kiểm tra giá trị của radio và thực hiện hành động tương ứng
            if (selectedValue === 'VNPay') {
                window.location.href = '/Booking/VNPay';
            } else if (selectedValue === 'Momo') {
                window.location.href = '/Booking/Momo';
            } else {
                // Hiển thị cảnh báo nếu không có radio nào được chọn
                alert("Vui lòng chọn Phương thức thanh toán");
            }
        }
    </script>
</body>

</html>