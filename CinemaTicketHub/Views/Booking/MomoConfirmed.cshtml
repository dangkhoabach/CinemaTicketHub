@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Cinema Ticket Hub</title>
    <link rel="icon" href="~/ticketicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

            body::before {
                content: "";
                background: url("/Content/images/momo_banner.jpg") center/cover no-repeat fixed;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: -1;
                filter: blur(10px);
            }
    </style>
</head>
<body onload="showSwal('success-message')">
    <script>
        (function ($) {
            showSwal = function (type) {
                'use strict';
                if (type === 'success-message') {
                    var status = '@ViewBag.MomoStatus';
                    var swalType = status === '0' ? 'success' : 'error';
                    var swalTitle = status === '0' ? 'Thanh toán Momo thành công!' : 'Thanh toán Momo thất bại!';
                    var swalReturn = status === '0' ? '/Manage/UserProfile' : '/Movies/NowShowing';
                    swal({
                        title: swalTitle,
                        text: '@Html.Raw(ViewBag.Message)',
                        type: swalType,
                        button: {
                            text: "OK",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    }, function (isConfirm) {
                        if (isConfirm) {
                            window.location.href = swalReturn;
                        }
                    });
                } else {
                    swal("Error occured !");
                }
            }
        })(jQuery);
    </script>
</body>
</html>
