@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Cinema Ticket Hub</title>
    <link rel="icon" href="~/ticketicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
</head>
<body onload="showSwal('success-message')">
    <script>
        (function ($) {
            showSwal = function (type) {
                'use strict';
                if (type === 'success-message') {
                    var status = '@ViewBag.VNPayStatus';
                    var swalType = status === 'error' ? 'error' : 'success';
                    var swalTitle = status === 'error' ? 'Thanh toán VNPay thất bại!' : 'Thanh toán VNPay thành công!';
                    var swalReturn = status === 'error' ? '/Movies/NowShowing' : '/Manage/UserProfile';
                    swal({
                        title: swalTitle,
                        text: '@Html.Raw(ViewBag.Message)',
                        type: swalType,
                        button: {
                            text: "OK",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    }, function (isConfirm) {
                        if (isConfirm) {
                            window.location.href = swalReturn;
                        }
                    });
                } else {
                    swal("Error occured !");
                }
            }
        })(jQuery);
    </script>
</body>
</html>
