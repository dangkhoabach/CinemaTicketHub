
@{
    ViewBag.Title = "Phim đang chiếu";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>[Phim Đang Chiếu] Cinema Ticket Hub</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.css">
    <link rel="stylesheet" href="~/Content/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
</head>

<body>

    <!-- ***** Banner Start ***** -->
    <div class="main-banner" style="min-height: unset; padding: unset">
        <div class="row">
                <div class="header-text">
                    <h4 style="text-align: center; margin: 0"><em>Phim</em> Đang Chiếu</h4>
                    <h6 style="text-align: center; margin: 0">Now Showing</h6>
                </div>
        </div>
    </div>
    <!-- ***** Banner End ***** -->

    <!-- ***** Nowshowing Start ***** -->
    <div class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="item">
                                <a href="@Url.Action("Details", "Movies", new { MaPhim = item.MaPhim })"><img src="@item.HinhAnh" alt=""></a>
                                <h4 style="text-align: justify; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;">@item.TenPhim<br><span>@item.MoTa</span></h4>
                                <ul>
                                    @if (item.DoiTuong == null)
                                    {
                                        <li><i class="fa fa-eye"></i> Chưa xác định</li>
                                    }
                                    else
                                    {
                                        <li><i class="fa fa-eye"></i> @item.DoiTuong</li>
                                    }

                                    <li><i class="fa fa-download"></i> @item.NgayKhoiChieu.ToShortDateString()</li>
                                </ul>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        <div class="main-button" style="text-align: right">
                            <a href="/Movies/ComingSoon">Phim Sắp Chiếu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Nowshowing End ***** -->

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/assets/js/isotope.min.js"></script>
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/tabs.js"></script>
    <script src="~/Content/assets/js/popup.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>
</body>
</html>