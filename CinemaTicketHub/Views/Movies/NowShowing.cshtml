@model List<CinemaTicketHub.API_Calling.Movie>
@{
    ViewBag.Title = "Phim đang chiếu";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>[Phim Đang Chiếu] Cinema Ticket Hub</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.css">
    <link rel="stylesheet" href="~/Content/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
</head>

<body>

    <!-- ***** Banner Start ***** -->
    <div class="main-banner" style="min-height: unset; padding: unset">
        <div class="row">
            <div class="header-text">
                <h4 style="text-align: center; margin: 0"><em>Phim</em> Đang Chiếu</h4>
                <h6 style="text-align: center; margin: 0">Now Showing</h6>
            </div>
        </div>
    </div>
    <!-- ***** Banner End ***** -->
    <!-- ***** Nowshowing Start ***** -->
    <div class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var movie in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="item">
                                <a href="@Url.Action("Detail", "Movies", new { id = movie.MovieID })"><img style="height: 300px; width: 230px" src="@movie.PosterPath" alt=""></a>
                                <h4>@movie.Title</h4>
                                <hr style="margin: 0" />
                                <ul>
                                    <li><i class="fa fa-language"></i> @movie.Language</li>

                                    <li><i class="fa fa-calendar-days"></i> @movie.ReleaseDate</li>
                                </ul>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        <div class="main-button" style="text-align: right">
                            <a href="/Movies/Upcoming">Phim Sắp Chiếu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Nowshowing End ***** -->
    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/assets/js/isotope.min.js"></script>
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/tabs.js"></script>
    <script src="~/Content/assets/js/popup.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>
</body>
</html>