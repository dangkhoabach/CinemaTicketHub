@model CinemaTicketHub.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<style>
    #txtpassword2, #txtpassword4, #txtpassword6 {
        display: none;
    }

    #txtpassword1, #txtpassword3, #txtpassword5 {
        margin: 10px 0;
    }

    ul {
        list-style-type: none;
        padding-left: 0;
    }
</style>

<div class="container" style="min-height: 70.1vh">
    <div class="main-body border border-danger" style="text-align: center; margin: 150px; padding: 35px 60px 20px 60px; border-radius: 20px">
        <div class="row gutters-sm">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>ĐỔI MẬT KHẨU</h2>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Mật khẩu hiện tại</label>
                    <input type="password" name="" class="form-control" required="" id="txtpassword1">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", id = "txtpassword2" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Mật khẩu mới</label>
                    <input type="password" name="" class="form-control" required="" id="txtpassword3">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", id = "txtpassword4" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Xác nhận mật khẩu mới</label>
                    <input type="password" name="" class="form-control" required="" id="txtpassword5">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "txtpassword6" })
                    </div>
                </div>

                <button class="btn btn-outline-danger" type="submit" style="margin: 10px 0">Đổi mật khẩu</button>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $('#txtpassword1').on('input', function () {
        var value = $(this).val();

        // Gán giá trị của textbox 1 cho Html.TextBoxFor
        $('#txtpassword2').val(value);
    });


    $('#txtpassword3').on('input', function () {
        var value = $(this).val();

        // Gán giá trị của textbox 1 cho Html.TextBoxFor
        $('#txtpassword4').val(value);
    });

    $('#txtpassword5').on('input', function () {
        var value = $(this).val();

        // Gán giá trị của textbox 1 cho Html.TextBoxFor
        $('#txtpassword6').val(value);
    });
</script>