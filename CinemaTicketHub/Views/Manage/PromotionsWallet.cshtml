@model CinemaTicketHub.Models.ViKhuyenMai

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.css">
    <link rel="stylesheet" href="~/Content/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <style>
        .btn-submit {
            display: none
        }

        #txtaddpromo2 {
            display: none;
        }

        #txtaddpromo1 {
            margin: 10px 0;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }
    </style>

    @if (ViewBag.Error != null)
    {
        <script>
    Swal.fire({
        icon: 'error',
        title: 'Thông báo!',
        text: '@ViewBag.Error'
    });
        </script>

    }
</head>

<body>
    <!-- ***** My Ticket Start ***** -->
    <div class="gaming-library" style="margin: 0">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4 style="margin-bottom: 0"><em>Ví</em> khuyến mãi</h4>
                <p style="margin-bottom: 30px">Dưới đây là các mã khuyến mãi bạn đã lưu vào ví.</p>
            </div>
            @if (ViewBag.PromoWallet == null || ViewBag.PromoWallet.Count == 0)
            {
                <h6>Bạn không có mã khuyến mãi nào!</h6>
            }
            else
            {
                foreach (var item in ViewBag.PromoWallet)
                {
                    <div class="item">
                        <ul>
                            <li><img src="https://cdn-icons-png.flaticon.com/512/2615/2615079.png" alt="" class="templatemo-item"></li>
                            <li><h4>@item.KhuyenMai.TenKM</h4><span>@item.IdKM@item.MaKM</span></li>

                            @if (@item.KhuyenMai.PhanTram == 0)
                            {
                                <li><h4>Ưu đãi</h4><span>Giảm @string.Format("{0:#,0}", item.KhuyenMai.SoTienGiam)</span></li>
                            }
                            else
                            {
                                <li><h4>Ưu đãi</h4><span>Giảm @item.KhuyenMai.PhanTram%</span></li>
                            }

                            <li><h4>Hạn sử dụng</h4><span>@item.KhuyenMai.ThoiHan.ToString("dd/MM/yyyy")</span></li>

                            @if (item.CT_KhuyenMai.TrangThai == true)
                            {
                                <li><h4>Trạng thái</h4><span>Có thể sử dụng</span></li>
                            }
                            else
                            {
                                <li><h4>Trạng thái</h4><span>Đã được sử dụng hoặc đã hết hạn</span></li>
                            }

                            <li>
                                <div class="main-border-button border-no-active">
                                    <a href="@Url.Action("DeletePromotion", new { MaKM = item.MaKM })" onclick="return confirm('Bạn có muốn xóa mã khuyến mãi này không?');">Xóa</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
            }
        </div>
    </div>
    <!-- ***** My Ticket End ***** -->

    <!-- ***** Details Start ***** -->
    <div class="game-details">
        <div class="row">
            @*<h2 style="margin: 0 0 25px">Ví Khuyến Mãi</h2>*@
            <div class="col-lg-8" style="text-align: right">
                @using (Html.BeginForm("SavePromotion", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group" style="margin: 10px 0">
                        <label style="font-size: 15px; color: white; margin-right: 74px">Thêm khuyến mãi</label>
                        <input type="text" name="" class="textboxnew" required="" id="txtaddpromo1" placeholder="Thêm mã khuyến mãi vào ví" style="width: 50%">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaKM, new { htmlAttributes = new { @class = "form-control", id = "txtaddpromo2" } })
                            @Html.ValidationMessageFor(model => model.MaKM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <button class="btn-submit" type="submit" style="margin: 10px 0">Thêm khuyến mãi</button>

                    @*<div class="main-border-button">
                        <a href="#" style="width: 17%" onclick="document.querySelector('.btn-submit').click(); return false;">Thêm vào ví</a>
                    </div>*@
                }
            </div>
            <div class="col-lg-4" style="text-align: center">
                <div class="main-border-button" style="margin-top: 22px">
                    <a href="#" style="width: 50%" onclick="document.querySelector('.btn-submit').click(); return false;">Thêm vào ví</a>
                </div>
            </div>
            </div>
        </div>
    <!-- ***** Details End ***** -->

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/assets/js/isotope.min.js"></script>
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/tabs.js"></script>
    <script src="~/Content/assets/js/popup.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>

    <script>
        $('#txtaddpromo1').on('input', function () {
            var value = $(this).val();

            // Gán giá trị của textbox 1 cho Html.TextBoxFor
            $('#txtaddpromo2').val(value);
        });
    </script>
</body>
</html>