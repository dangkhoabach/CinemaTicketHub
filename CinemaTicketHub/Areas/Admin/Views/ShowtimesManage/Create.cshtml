@model CinemaTicketHub.Models.SuatChieu

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@CinemaTicketHub.MultiLanguage.Language.Add @CinemaTicketHub.MultiLanguage.Language.Showtimes</h2>
<hr />
<div class="row">
    @using (Html.BeginForm("SaveShowtimes", "ShowtimesManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">@CinemaTicketHub.MultiLanguage.Language.Movie</label>
            @Html.DropDownList("MaPhim", new SelectList(ViewBag.Phim, "MaPhim", "TenPhim"), "--" + @CinemaTicketHub.MultiLanguage.Language.SelectOption + "--", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">@CinemaTicketHub.MultiLanguage.Language.RoomName</label>
            @Html.DropDownList("MaPhong", new SelectList(ViewBag.PhongChieu, "MaPhong", "TenPhong"), "--" + @CinemaTicketHub.MultiLanguage.Language.SelectOption + "--", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">@CinemaTicketHub.MultiLanguage.Language.ShowDate</label>
            @Html.EditorFor(model => model.NgayChieu, new { htmlAttributes = new { @class = "form-control", placeholder = @CinemaTicketHub.MultiLanguage.Language.DateFormat } })
            @Html.ValidationMessageFor(model => model.NgayChieu, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">@CinemaTicketHub.MultiLanguage.Language.StartTime</label>
            @Html.EditorFor(model => model.GioBatDau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GioBatDau, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">@CinemaTicketHub.MultiLanguage.Language.EndTime</label>
            @Html.EditorFor(model => model.GioKetThuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GioKetThuc, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <input type="submit" value="@CinemaTicketHub.MultiLanguage.Language.Add" class="btn btn-outline-danger" />
        </div>
    }
    <div>
        @Html.ActionLink(@CinemaTicketHub.MultiLanguage.Language.Back, "List")
    </div>
</div>
